<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <%= simple_form_for @article do |f| %>
      <%= f.input :title %>
      <%= f.input :source_link %>
      <%= f.input :body %>
      <%= f.submit "Submit", class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Go back", :back, class: "btn btn-sm btn-outline-danger" %>
      <% end %>
    </div>
  </div>
</div>