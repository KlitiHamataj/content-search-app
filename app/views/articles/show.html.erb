<div class="container pt-5">
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <div class="card-body">
          <h5 class="card-title"><%= @article.title %></h5>
          <p class="card-text"><%= @article.body %></p>
          <p class="card-text"><%= link_to short_url(@article.source_link), url_for(@article.source_link), target: "_blank" %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_article_path(@article) %></button>
            </div>
            <small class="text-muted">Reading time: <%= @article.body.reading_time :format => :long %></small>
            <button type="button" class="btn btn-sm btn-outline-danger"><%= link_to "Back", :back %></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>