<div class="album py-5 bg-light">
  <div class="container">
  <h1 class="text-center">Articles</h1>
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= article.body %></p>
            <%= link_to short_url(article.source_link), class: "card-text" %>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", article_path(article) %></button>
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_article_path(article) %></button>
              </div>
              <small class="text-muted">Reading time: <%= article.body.reading_time :format => :long %></small>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
